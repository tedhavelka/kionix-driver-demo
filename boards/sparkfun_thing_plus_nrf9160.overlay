&i2c1 {
        compatible = "nordic,nrf-twim";
        status = "okay";
        sda-pin = <26>;
        scl-pin = <27>;
        kionix_sensor: kx132_1211@1f {
                compatible = "kionix,kx132_1211"; 
                reg = <0x1F>;
                label = "KX132_1211";
        };  
};

